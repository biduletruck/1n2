                        {{ form_widget(form.Predict.3) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
         <div class="justify-content-center align-self-center text-center col-12">
            {% if Prevent == 0  %}
                <div class="row justify-content-center ">
                    <button class="btn btn-success">{{ button_label|default('Valider mon choix') }}</button>
                </div>
            {% else %}
                <div class="row justify-content-center alert alert-info">
                    <h2 class="">Vous avez déjà fait votre pronostic</h2>
               </div>
            {% endif %}
        </div
    </div>
