{% extends 'base.html.twig' %}

{% block title %}HalloweenCheck index{% endblock %}

{% block body %}
    <h1>HalloweenCheck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Joueur</th>
                <th>CreatedAt</th>
                {% if is_granted('ROLE_SUPERADMIN') %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for halloween_check in halloween_checks %}
            <tr>
                <td>{{ halloween_check.user }}</td>
                <td>{{ halloween_check.createdAt ? halloween_check.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                {% if is_granted('ROLE_SUPERADMIN') %}
                <td>
                    <a href="{{ path('halloween_check_show', {'id': halloween_check.id}) }}">show</a>
                    <a href="{{ path('halloween_check_edit', {'id': halloween_check.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('halloween_check_new') }}">Create new</a>
{% endblock %}
