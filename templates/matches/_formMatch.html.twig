
{% if "now"|date('Y-m-d H:i:s') < match.StartTime|date('Y-m-d H:i:s') %}
<tr>
    <td>{{ match.id }}</td>
    <td>{{ match.StartTime ? match.StartTime|date('Y-m-d H:i:s') : '' }}</td>
    <td>{{ match.HomeResult }}</td>
    <td>{{ match.VisitorResult }}</td>
    <td>

        <a href="{{ path('predictions_new', {'id': match.id}) }}">play</a>
    </td>
</tr>

<div class="row">

    <div class="justify-content-center align-self-center text-center col-2 col-md-2 col-lg-3">
        <span class="align-middle">{{ prediction.game.home.name }}</span>
    </div>
    <div class="justify-content-center align-self-center col-2">
        <img class="img-fluid" src="{{ asset('images/thumbnails/' ~ prediction.game.home.thumbnail) }}" alt="{{ prediction.game.home.name }}">
    </div>
    <div class="justify-content-center align-self-center col-2 col-md-2 col-lg-1">
        <H2>{{ match.Startime }}</H2>
    </div>


    <div class="justify-content-center align-self-center col-2 col-md-2 col-lg-1">
        {{ form_widget(form.VisitorResult, { 'attr': {'class': 'score'}}) }}
    </div>
    <div class="justify-content-center align-self-center col-2">
        <img class="img-fluid" src="{{ asset('images/thumbnails/' ~ prediction.game.visitor.thumbnail) }}" alt="{{ prediction.game.home.name }}">
    </div>
    <div class="justify-content-center align-self-center text-center col-2 col-md-2 col-lg-3">
        <span class="align-middle">{{ prediction.game.visitor.name }}</span>
    </div>

</div>
<div class="row">
    <div class="text-right justify-content-center align-self-center col-4">
        {{ form_label(form.Predict.0, null, { 'label': 'Gagnant' , 'attr': {'class': ''} }) }}
        {{ form_widget(form.Predict.0) }}
    </div>
    <div class="text-center justify-content-center align-self-center col-4">
        {{ form_label(form.Predict.1, null, { 'label': 'Match Mul' , 'attr': {'class': ''} }) }}
        {{ form_widget(form.Predict.1) }}
    </div>
    <div class="text-left justify-content-center align-self-center col-4">
        {{ form_widget(form.Predict.2) }}
        {{ form_label(form.Predict.2, null, { 'label': 'Gagnant' , 'attr': {'class': ''} }) }}
    </div>

</div>
<div class="row justify-content-center ">
    <button class="btn btn-success">{{ button_label|default('Valider mon choix') }}</button>
</div>